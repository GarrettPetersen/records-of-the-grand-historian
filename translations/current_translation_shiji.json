  "sentences": [
    {
      "id": "46-s0301",
      "originalId": "s0301",
      "blockIndex": 46,
      "chinese": "填星，其色黃，九芒，音曰黃鐘宮。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "46-s0302",
      "originalId": "s0302",
      "blockIndex": 46,
      "chinese": "其失次上二三宿曰贏，有主命不成，不乃大水。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "46-s0303",
      "originalId": "s0303",
      "blockIndex": 46,
      "chinese": "失次下二三宿曰縮，有后戚，其歲不復，不乃天裂若地動。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "47-s0304",
      "originalId": "s0304",
      "blockIndex": 47,
      "chinese": "斗為文太室，填星廟，天子之星也。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "48-s0305",
      "originalId": "s0305",
      "blockIndex": 48,
      "chinese": "木星與土合，為內亂。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "48-s0306",
      "originalId": "s0306",
      "blockIndex": 48,
      "chinese": "饑，主勿用戰，敗；",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "48-s0307",
      "originalId": "s0307",
      "blockIndex": 48,
      "chinese": "水則變謀而更事；",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "48-s0308",
      "originalId": "s0308",
      "blockIndex": 48,
      "chinese": "火為旱；",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "48-s0309",
      "originalId": "s0309",
      "blockIndex": 48,
      "chinese": "金為白衣會若水。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "48-s0310",
      "originalId": "s0310",
      "blockIndex": 48,
      "chinese": "金在南曰牝牡，年穀熟，金在北，歲偏無。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "48-s0311",
      "originalId": "s0311",
      "blockIndex": 48,
      "chinese": "火與水合為焠，與金合為鑠，為喪，皆不可舉事，用兵大敗。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "48-s0312",
      "originalId": "s0312",
      "blockIndex": 48,
      "chinese": "土為憂，主孽卿；",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "48-s0313",
      "originalId": "s0313",
      "blockIndex": 48,
      "chinese": "大饑，戰敗，為北軍，軍困，舉事大敗。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "48-s0314",
      "originalId": "s0314",
      "blockIndex": 48,
      "chinese": "土與水合，穰而擁閼，有覆軍，其國不可舉事。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "48-s0315",
      "originalId": "s0315",
      "blockIndex": 48,
      "chinese": "出，亡地；",
      "literal": "",
      "idiomatic": ""
    }
  ]
}