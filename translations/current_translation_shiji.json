  "sentences": [
    {
      "id": "0-s0001",
      "originalId": "s0001",
      "blockIndex": 0,
      "chinese": "太史公曰：五帝、三代之記，尚矣。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "0-s0002",
      "originalId": "s0002",
      "blockIndex": 0,
      "chinese": "自殷以前諸侯不可得而譜，周以來乃頗可著。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "0-s0003",
      "originalId": "s0003",
      "blockIndex": 0,
      "chinese": "孔子因史文次春秋，紀元年，正時日月，蓋其詳哉。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "0-s0004",
      "originalId": "s0004",
      "blockIndex": 0,
      "chinese": "至於序尚書則略，無年月；",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "0-s0005",
      "originalId": "s0005",
      "blockIndex": 0,
      "chinese": "或頗有，然多闕，不可錄。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "0-s0006",
      "originalId": "s0006",
      "blockIndex": 0,
      "chinese": "故疑則傳疑，蓋其慎也。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0007",
      "originalId": "s0007",
      "blockIndex": 1,
      "chinese": "余讀諜記，黃帝以來皆有年數。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0008",
      "originalId": "s0008",
      "blockIndex": 1,
      "chinese": "稽其歷譜諜終始五德之傳，古文咸不同，乖異。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0009",
      "originalId": "s0009",
      "blockIndex": 1,
      "chinese": "夫子之弗論次其年月，豈虛哉！",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0010",
      "originalId": "s0010",
      "blockIndex": 1,
      "chinese": "於是以五帝系諜、尚書集世紀黃帝以連山訖共和為世表。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "3-s105",
      "originalId": "s105",
      "blockIndex": 3,
      "chinese": "成王誦",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "3-s106",
      "originalId": "s106",
      "blockIndex": 3,
      "chinese": "魯周公旦，武王弟。初封。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "3-s107",
      "originalId": "s107",
      "blockIndex": 3,
      "chinese": "齊太公尚，文王、武王師。初封。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "3-s108",
      "originalId": "s108",
      "blockIndex": 3,
      "chinese": "晉唐叔虞，武王子。初封。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "3-s109",
      "originalId": "s109",
      "blockIndex": 3,
      "chinese": "秦惡來，助紂。父飛廉，有力。",
      "literal": "",
      "idiomatic": ""
    }
  ]
}