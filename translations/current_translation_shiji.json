{
  "metadata": {
    "book": "shiji",
    "chapter": "027",
    "file": "data/shiji/027.json"
  },
  "sentences": [
    {
      "id": "0-s0001",
      "originalId": "s0001",
      "blockIndex": 0,
      "chinese": "中宮天極星，其一明者，太一常居也；",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "0-s0002",
      "originalId": "s0002",
      "blockIndex": 0,
      "chinese": "旁三星三公，或曰子屬。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "0-s0003",
      "originalId": "s0003",
      "blockIndex": 0,
      "chinese": "後句四星，末大星正妃，餘三星後宮之屬也。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "0-s0004",
      "originalId": "s0004",
      "blockIndex": 0,
      "chinese": "環之匡衛十二星，藩臣。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "0-s0005",
      "originalId": "s0005",
      "blockIndex": 0,
      "chinese": "皆曰紫宮。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0006",
      "originalId": "s0006",
      "blockIndex": 1,
      "chinese": "前列直斗口三星，隨北端兌，若見若不，曰陰德，或曰天一。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0007",
      "originalId": "s0007",
      "blockIndex": 1,
      "chinese": "紫宮左三星曰天槍，右五星曰天棓，後六星絕漢抵營室，曰閣道。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0008",
      "originalId": "s0008",
      "blockIndex": 2,
      "chinese": "北斗七星，所謂「旋、璣、玉衡以齊七政」。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0009",
      "originalId": "s0009",
      "blockIndex": 2,
      "chinese": "杓攜龍角，衡殷南斗，魁枕參首。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0010",
      "originalId": "s0010",
      "blockIndex": 2,
      "chinese": "用昏建者杓；",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0011",
      "originalId": "s0011",
      "blockIndex": 2,
      "chinese": "杓，自華以西南。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0012",
      "originalId": "s0012",
      "blockIndex": 2,
      "chinese": "夜半建者衡；",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0013",
      "originalId": "s0013",
      "blockIndex": 2,
      "chinese": "衡，殷中州河、濟之閒。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0014",
      "originalId": "s0014",
      "blockIndex": 2,
      "chinese": "平旦建者魁；",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0015",
      "originalId": "s0015",
      "blockIndex": 2,
      "chinese": "魁，海岱以東北也。",
      "literal": "",
      "idiomatic": ""
    }
  ]
}