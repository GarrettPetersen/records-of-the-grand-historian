  "sentences": [
    {
      "id": "0-s0001",
      "originalId": "s0001",
      "blockIndex": 0,
      "chinese": "呂不韋者，陽翟大賈人也。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "0-s0002",
      "originalId": "s0002",
      "blockIndex": 0,
      "chinese": "往來販賤賣貴，家累千金。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0003",
      "originalId": "s0003",
      "blockIndex": 1,
      "chinese": "秦昭王四十年，太子死。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0004",
      "originalId": "s0004",
      "blockIndex": 1,
      "chinese": "其四十二年，以其次子安國君為太子。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0005",
      "originalId": "s0005",
      "blockIndex": 1,
      "chinese": "安國君有子二十餘人。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0006",
      "originalId": "s0006",
      "blockIndex": 1,
      "chinese": "安國君有所甚愛姬，立以為正夫人，號曰華陽夫人。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0007",
      "originalId": "s0007",
      "blockIndex": 1,
      "chinese": "華陽夫人無子。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0008",
      "originalId": "s0008",
      "blockIndex": 1,
      "chinese": "安國君中男名子楚，子楚母曰夏姬，毋愛。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0009",
      "originalId": "s0009",
      "blockIndex": 1,
      "chinese": "子楚為秦質子於趙。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0010",
      "originalId": "s0010",
      "blockIndex": 1,
      "chinese": "秦數攻趙，趙不甚禮子楚。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0011",
      "originalId": "s0011",
      "blockIndex": 2,
      "chinese": "子楚，秦諸庶孽孫，質於諸侯，車乘進用不饒，居處困，不得意。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0012",
      "originalId": "s0012",
      "blockIndex": 2,
      "chinese": "呂不韋賈邯鄲，見而憐之，曰「此奇貨可居」。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0013",
      "originalId": "s0013",
      "blockIndex": 2,
      "chinese": "乃往見子楚，說曰：「吾能大子之門。」",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0014",
      "originalId": "s0014",
      "blockIndex": 2,
      "chinese": "子楚笑曰：「且自大君之門，而乃大吾門！」",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0015",
      "originalId": "s0015",
      "blockIndex": 2,
      "chinese": "呂不韋曰：「子不知也，吾門待子門而大。」",
      "literal": "",
      "idiomatic": ""
    }
  ]
}