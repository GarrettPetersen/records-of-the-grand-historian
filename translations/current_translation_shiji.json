  "sentences": [
    {
      "id": "0-s0001",
      "originalId": "s0001",
      "blockIndex": 0,
      "chinese": "趙氏之先，與秦共祖。",
      "literal": "Zhao clan's forebears, together with Qin shared ancestor.",
      "idiomatic": "The forebears of the Zhao clan shared a common ancestor with Qin."
    },
    {
      "id": "0-s0002",
      "originalId": "s0002",
      "blockIndex": 0,
      "chinese": "至中衍，為帝大戊御。",
      "literal": "Reached Zhong Yan, was Emperor Da Wu's charioteer.",
      "idiomatic": "The line reached Zhong Yan, who served as Emperor Da Wu's charioteer."
    },
    {
      "id": "0-s0003",
      "originalId": "s0003",
      "blockIndex": 0,
      "chinese": "其後世蜚廉有子二人，而命其一子曰惡來，事紂，為周所殺，其後為秦。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "0-s0004",
      "originalId": "s0004",
      "blockIndex": 0,
      "chinese": "惡來弟曰季勝，其後為趙。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0005",
      "originalId": "s0005",
      "blockIndex": 1,
      "chinese": "季勝生孟增。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0006",
      "originalId": "s0006",
      "blockIndex": 1,
      "chinese": "孟增幸於周成王，是為宅皋狼。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0007",
      "originalId": "s0007",
      "blockIndex": 1,
      "chinese": "皋狼生衡父，衡父生造父。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0008",
      "originalId": "s0008",
      "blockIndex": 1,
      "chinese": "造父幸於周繆王。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0009",
      "originalId": "s0009",
      "blockIndex": 1,
      "chinese": "造父取驥之乘匹，與桃林盜驪、驊騮、綠耳，獻之繆王。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0010",
      "originalId": "s0010",
      "blockIndex": 1,
      "chinese": "繆王使造父御，西巡狩，見西王母，樂之忘歸。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0011",
      "originalId": "s0011",
      "blockIndex": 1,
      "chinese": "而徐偃王反，繆王日馳千里馬，攻徐偃王，大破之。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "1-s0012",
      "originalId": "s0012",
      "blockIndex": 1,
      "chinese": "乃賜造父以趙城，由此為趙氏。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0013",
      "originalId": "s0013",
      "blockIndex": 2,
      "chinese": "自造父已下六世至奄父，曰公仲，周宣王時伐戎，為御。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0014",
      "originalId": "s0014",
      "blockIndex": 2,
      "chinese": "及千畝戰，奄父脫宣王。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "2-s0015",
      "originalId": "s0015",
      "blockIndex": 2,
      "chinese": "奄父生叔帶。",
      "literal": "",
      "idiomatic": ""
    }
  ]
}