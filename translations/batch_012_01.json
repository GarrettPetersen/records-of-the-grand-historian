{
  "s0001": {
    "chinese": "孝哀皇帝，元帝庶孫，定陶恭王子也。",
    "literal": "[Literal translation needed for 14 characters]",
    "idiomatic": "[Idiomatic translation needed for 14 characters]"
  },
  "s0002": {
    "chinese": "母曰丁姬。",
    "literal": "[Literal translation needed for 4 characters]",
    "idiomatic": "[Idiomatic translation needed for 4 characters]"
  },
  "s0003": {
    "chinese": "年三歲嗣立為王，長好文辭法律。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0004": {
    "chinese": "元延四年入朝，盡從傅、相、中尉。",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  },
  "s0005": {
    "chinese": "時成帝少弟中山孝王亦來朝，獨從傅。",
    "literal": "[Literal translation needed for 15 characters]",
    "idiomatic": "[Idiomatic translation needed for 15 characters]"
  },
  "s0006": {
    "chinese": "上怪之，以問定陶王，對曰：「令，諸侯王朝，得從其國二千石。",
    "literal": "[Literal translation needed for 22 characters]",
    "idiomatic": "[Idiomatic translation needed for 22 characters]"
  },
  "s0007": {
    "chinese": "傅、相、中尉皆國二千石，故盡從之。」",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0008": {
    "chinese": "上令誦詩，通習，能說。",
    "literal": "[Literal translation needed for 8 characters]",
    "idiomatic": "[Idiomatic translation needed for 8 characters]"
  },
  "s0009": {
    "chinese": "他日問中山王：「",
    "literal": "[Literal translation needed for 6 characters]",
    "idiomatic": "[Idiomatic translation needed for 6 characters]"
  },
  "s0010": {
    "chinese": "獨從傅在何法令？」",
    "literal": "[Literal translation needed for 7 characters]",
    "idiomatic": "[Idiomatic translation needed for 7 characters]"
  },
  "s0011": {
    "chinese": "不能對。",
    "literal": "[Literal translation needed for 3 characters]",
    "idiomatic": "[Idiomatic translation needed for 3 characters]"
  },
  "s0012": {
    "chinese": "令誦尚書，又廢。",
    "literal": "[Literal translation needed for 6 characters]",
    "idiomatic": "[Idiomatic translation needed for 6 characters]"
  },
  "s0013": {
    "chinese": "及賜食於前，後飽；",
    "literal": "[Literal translation needed for 7 characters]",
    "idiomatic": "[Idiomatic translation needed for 7 characters]"
  },
  "s0014": {
    "chinese": "起下，陉係解。",
    "literal": "[Literal translation needed for 5 characters]",
    "idiomatic": "[Idiomatic translation needed for 5 characters]"
  },
  "s0015": {
    "chinese": "成帝由此以為不能，而賢定陶王，數稱其材。",
    "literal": "[Literal translation needed for 17 characters]",
    "idiomatic": "[Idiomatic translation needed for 17 characters]"
  },
  "s0016": {
    "chinese": "時王祖母傅太后隨王來朝，私賂遺上所幸趙昭儀及帝舅票騎將軍曲陽侯王根。",
    "literal": "[Literal translation needed for 32 characters]",
    "idiomatic": "[Idiomatic translation needed for 32 characters]"
  },
  "s0017": {
    "chinese": "昭儀及根見上亡子，亦欲豫自結為長久計，皆更稱定陶王，勸帝以為嗣。",
    "literal": "[Literal translation needed for 28 characters]",
    "idiomatic": "[Idiomatic translation needed for 28 characters]"
  },
  "s0018": {
    "chinese": "成帝亦自美其材，為加元服而遣之，時年十七矣。",
    "literal": "[Literal translation needed for 19 characters]",
    "idiomatic": "[Idiomatic translation needed for 19 characters]"
  },
  "s0019": {
    "chinese": "明年，使執金吾任宏守大鴻臚，持節徵定陶王，立為皇太子。",
    "literal": "[Literal translation needed for 23 characters]",
    "idiomatic": "[Idiomatic translation needed for 23 characters]"
  },
  "s0020": {
    "chinese": "謝曰：「臣幸得繼父守藩為諸侯王，材質不足以假充太子之宮。",
    "literal": "[Literal translation needed for 24 characters]",
    "idiomatic": "[Idiomatic translation needed for 24 characters]"
  },
  "s0021": {
    "chinese": "陛下聖德寬仁，敬承祖宗，奉順神祇，宜蒙福祐子孫千億之報。",
    "literal": "[Literal translation needed for 24 characters]",
    "idiomatic": "[Idiomatic translation needed for 24 characters]"
  },
  "s0022": {
    "chinese": "臣願且得留國邸，旦夕奉問起居，俟有聖嗣，歸國守藩。」",
    "literal": "[Literal translation needed for 21 characters]",
    "idiomatic": "[Idiomatic translation needed for 21 characters]"
  },
  "s0023": {
    "chinese": "書奏，天子報聞。",
    "literal": "[Literal translation needed for 6 characters]",
    "idiomatic": "[Idiomatic translation needed for 6 characters]"
  },
  "s0024": {
    "chinese": "後月餘，立楚孝王孫景為定陶王，奉恭王祀，所以獎厲太子專為後之誼。",
    "literal": "[Literal translation needed for 28 characters]",
    "idiomatic": "[Idiomatic translation needed for 28 characters]"
  },
  "s0025": {
    "chinese": "語在外戚傳。",
    "literal": "[Literal translation needed for 5 characters]",
    "idiomatic": "[Idiomatic translation needed for 5 characters]"
  },
  "s0026": {
    "chinese": "綏和二年三月，成帝崩。",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0027": {
    "chinese": "四月丙午，太子即皇帝位，謁高廟。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0028": {
    "chinese": "尊皇太后曰太皇太后，皇后曰皇太后。",
    "literal": "[Literal translation needed for 15 characters]",
    "idiomatic": "[Idiomatic translation needed for 15 characters]"
  },
  "s0029": {
    "chinese": "大赦天下。",
    "literal": "[Literal translation needed for 4 characters]",
    "idiomatic": "[Idiomatic translation needed for 4 characters]"
  },
  "s0030": {
    "chinese": "賜宗室王子有屬者馬各一駟，吏民爵，百戶牛酒，三老、孝弟力田、鰥寡孤獨帛。",
    "literal": "[Literal translation needed for 30 characters]",
    "idiomatic": "[Idiomatic translation needed for 30 characters]"
  },
  "s0031": {
    "chinese": "太皇太后詔尊定陶恭王為恭皇。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0032": {
    "chinese": "五月丙戌，立皇后傅氏。",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0033": {
    "chinese": "詔曰：「春秋『母以子貴』，尊定陶太后曰恭皇太后，丁姬曰恭皇后，各置左右詹事，食邑如長信宮、中宮。」",
    "literal": "[Literal translation needed for 38 characters]",
    "idiomatic": "[Idiomatic translation needed for 38 characters]"
  },
  "s0034": {
    "chinese": "追尊傅父為崇祖侯、丁父為褒德侯。",
    "literal": "[Literal translation needed for 14 characters]",
    "idiomatic": "[Idiomatic translation needed for 14 characters]"
  },
  "s0035": {
    "chinese": "封舅丁明為陽安侯，舅子滿為平周侯。",
    "literal": "[Literal translation needed for 15 characters]",
    "idiomatic": "[Idiomatic translation needed for 15 characters]"
  },
  "s0036": {
    "chinese": "追諡滿父忠為平周懷侯，皇后父晏為孔鄉侯，皇太后弟侍中光祿大夫趙欽為新成侯。",
    "literal": "[Literal translation needed for 34 characters]",
    "idiomatic": "[Idiomatic translation needed for 34 characters]"
  },
  "s0037": {
    "chinese": "六月，詔曰：「鄭聲淫而亂樂，聖王所放，其罷樂府。」",
    "literal": "[Literal translation needed for 18 characters]",
    "idiomatic": "[Idiomatic translation needed for 18 characters]"
  },
  "s0038": {
    "chinese": "曲陽侯根前以大司馬建社稷策，益封二千戶。",
    "literal": "[Literal translation needed for 18 characters]",
    "idiomatic": "[Idiomatic translation needed for 18 characters]"
  },
  "s0039": {
    "chinese": "太僕安陽侯舜輔導有舊恩，益封五百戶，及丞相孔光、大司空氾鄉侯何武益封各千戶。",
    "literal": "[Literal translation needed for 34 characters]",
    "idiomatic": "[Idiomatic translation needed for 34 characters]"
  },
  "s0040": {
    "chinese": "詔曰：「河間王良喪太后三年，為宗室儀表，益封萬戶。」",
    "literal": "[Literal translation needed for 20 characters]",
    "idiomatic": "[Idiomatic translation needed for 20 characters]"
  },
  "s0041": {
    "chinese": "又曰：「制節謹度以防奢淫，為政所先，百王不易之道也。",
    "literal": "[Literal translation needed for 21 characters]",
    "idiomatic": "[Idiomatic translation needed for 21 characters]"
  },
  "s0042": {
    "chinese": "諸侯王、列侯、公主、吏二千石及豪富民多畜奴婢，田宅亡限，與民爭利，百姓失職，重困不足。",
    "literal": "[Literal translation needed for 35 characters]",
    "idiomatic": "[Idiomatic translation needed for 35 characters]"
  },
  "s0043": {
    "chinese": "其議限列。」",
    "literal": "[Literal translation needed for 4 characters]",
    "idiomatic": "[Idiomatic translation needed for 4 characters]"
  },
  "s0044": {
    "chinese": "有司條奏：「諸王、列侯得名田國中，列侯在長安及公主名田縣道，關內侯、吏民名田，皆無得過三十頃。",
    "literal": "[Literal translation needed for 39 characters]",
    "idiomatic": "[Idiomatic translation needed for 39 characters]"
  },
  "s0045": {
    "chinese": "諸侯王奴婢二百人，列侯、公主百人，關內侯、吏民三十人。",
    "literal": "[Literal translation needed for 22 characters]",
    "idiomatic": "[Idiomatic translation needed for 22 characters]"
  },
  "s0046": {
    "chinese": "年六十以上，十歲以下，不在數中。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0047": {
    "chinese": "賈人皆不得名田、為吏，犯者以律論。",
    "literal": "[Literal translation needed for 14 characters]",
    "idiomatic": "[Idiomatic translation needed for 14 characters]"
  },
  "s0048": {
    "chinese": "諸名田畜奴婢過品，皆沒入縣官。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0049": {
    "chinese": "齊三服官、諸官織綺繡，難成，害女紅之物，皆止，無作輸。",
    "literal": "[Literal translation needed for 21 characters]",
    "idiomatic": "[Idiomatic translation needed for 21 characters]"
  },
  "s0050": {
    "chinese": "除任子令及誹謗詆欺法。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  }
}