  "metadata": {
    "book": "shiji",
    "chapter": "012",
    "file": "data/shiji/012.json"
  },
  "sentences": [
    {
      "id": "s0001",
      "chinese": "孝武皇帝者，孝景中子也。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0002",
      "chinese": "母曰王太后。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0003",
      "chinese": "孝景四年，以皇子為膠東王。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0004",
      "chinese": "孝景七年，栗太子廢為臨江王，以膠東王為太子。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0005",
      "chinese": "孝景十六年崩，太子即位，為孝武皇帝。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0006",
      "chinese": "孝武皇帝初即位，尤敬鬼神之祀。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0007",
      "chinese": "元年，漢興已六十餘歲矣，天下乂安，薦紳之屬皆望天子封禪改正度也。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0008",
      "chinese": "而上鄉儒術，招賢良，趙綰、王臧等以文學為公卿，欲議古立明堂城南，以朝諸侯。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0009",
      "chinese": "草巡狩封禪改歷服色事未就。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0010",
      "chinese": "會竇太后治黃老言，不好儒術，使人微得趙綰等姦利事，召案綰、臧，綰、臧自殺，諸所興為者皆廢。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0011",
      "chinese": "後六年，竇太后崩。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0012",
      "chinese": "其明年，上徵文學之士公孫弘等。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0013",
      "chinese": "明年，上初至雍，郊見五畤。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0014",
      "chinese": "後常三歲一郊。",
      "literal": "",
      "idiomatic": ""
    },
    {
      "id": "s0015",
      "chinese": "是時上求神君，捨之上林中蹄氏觀。",
      "literal": "",
      "idiomatic": ""
    }
  ]
}