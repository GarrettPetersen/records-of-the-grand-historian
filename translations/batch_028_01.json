{
  "s0001": {
    "chinese": "洪範八政，三曰祀。",
    "literal": "",
    "idiomatic": ""
  },
  "s0002": {
    "chinese": "祀者，所以昭孝事祖，通神明也。",
    "literal": "",
    "idiomatic": ""
  },
  "s0003": {
    "chinese": "旁及四夷，莫不修之；",
    "literal": "",
    "idiomatic": ""
  },
  "s0004": {
    "chinese": "下至禽獸，豺獺有祭。",
    "literal": "",
    "idiomatic": ""
  },
  "s0005": {
    "chinese": "是以聖王為之典禮。",
    "literal": "",
    "idiomatic": ""
  },
  "s0006": {
    "chinese": "民之精爽不貳，齊肅聰明者，神或降之，在男曰覡，在女曰巫，使制神之處位，為之牲器。",
    "literal": "",
    "idiomatic": ""
  },
  "s0007": {
    "chinese": "使先聖之後，能知山川，敬於禮儀，明神之事者，以為祝；",
    "literal": "",
    "idiomatic": ""
  },
  "s0008": {
    "chinese": "能知四時犧牲，壇場上下，氏姓所出者，以為宗。",
    "literal": "",
    "idiomatic": ""
  },
  "s0009": {
    "chinese": "故有神民之官，各司其序，不相亂也。",
    "literal": "",
    "idiomatic": ""
  },
  "s0010": {
    "chinese": "民神異業，敬而不黷，故神降之嘉生，民以物序，災禍不至，所求不匱。",
    "literal": "",
    "idiomatic": ""
  },
  "s0011": {
    "chinese": "及少昊之衰，九黎亂德，民神雜擾，不可放物。",
    "literal": "",
    "idiomatic": ""
  },
  "s0012": {
    "chinese": "家為巫史，享祀無度，黷齊明而神弗蠲。",
    "literal": "",
    "idiomatic": ""
  },
  "s0013": {
    "chinese": "嘉生不降，禍災荐臻，莫盡其氣。",
    "literal": "",
    "idiomatic": ""
  },
  "s0014": {
    "chinese": "顓頊受之，乃命南正重司天以屬神，命火正黎司地以屬民，使復舊常，亡相侵黷。",
    "literal": "",
    "idiomatic": ""
  },
  "s0015": {
    "chinese": "自共工氏霸九州，其子曰句龍，能平水土，死為社祠。",
    "literal": "",
    "idiomatic": ""
  },
  "s0016": {
    "chinese": "有烈山氏王天下，其子曰柱，能殖百穀，死為稷祠。",
    "literal": "",
    "idiomatic": ""
  },
  "s0017": {
    "chinese": "故郊祀社稷，所從來尚矣。",
    "literal": "",
    "idiomatic": ""
  },
  "s0018": {
    "chinese": "《虞書》曰，舜在璿璣玉衡，以齊七政。",
    "literal": "",
    "idiomatic": ""
  },
  "s0019": {
    "chinese": "遂類于上帝，禋于六宗，望秩于山川，遍于群神。",
    "literal": "",
    "idiomatic": ""
  },
  "s0020": {
    "chinese": "揖五瑞，擇吉月日，見四嶽諸牧，班瑞。",
    "literal": "",
    "idiomatic": ""
  },
  "s0021": {
    "chinese": "歲二月，東巡狩，至于岱宗。",
    "literal": "",
    "idiomatic": ""
  },
  "s0022": {
    "chinese": "岱宗，泰山也。",
    "literal": "",
    "idiomatic": ""
  },
  "s0023": {
    "chinese": "柴，望秩于山川。",
    "literal": "",
    "idiomatic": ""
  },
  "s0024": {
    "chinese": "遂見東后。",
    "literal": "",
    "idiomatic": ""
  },
  "s0025": {
    "chinese": "東后者，諸侯也。",
    "literal": "",
    "idiomatic": ""
  },
  "s0026": {
    "chinese": "合時月正日，同律度量衡，修五禮五樂，三帛二生一死為贄。",
    "literal": "",
    "idiomatic": ""
  },
  "s0027": {
    "chinese": "五月，巡狩至南嶽。",
    "literal": "",
    "idiomatic": ""
  },
  "s0028": {
    "chinese": "南嶽者，衡山也。",
    "literal": "",
    "idiomatic": ""
  },
  "s0029": {
    "chinese": "八月，巡狩至西嶽。",
    "literal": "",
    "idiomatic": ""
  },
  "s0030": {
    "chinese": "西嶽者，華山也。",
    "literal": "",
    "idiomatic": ""
  },
  "s0031": {
    "chinese": "十一月，巡狩至北嶽。",
    "literal": "",
    "idiomatic": ""
  },
  "s0032": {
    "chinese": "北嶽者，恆山也。",
    "literal": "",
    "idiomatic": ""
  },
  "s0033": {
    "chinese": "皆如岱宗之禮。",
    "literal": "",
    "idiomatic": ""
  },
  "s0034": {
    "chinese": "中嶽，嵩高也。",
    "literal": "",
    "idiomatic": ""
  },
  "s0035": {
    "chinese": "五載一巡狩。",
    "literal": "",
    "idiomatic": ""
  },
  "s0036": {
    "chinese": "禹遵之。",
    "literal": "",
    "idiomatic": ""
  },
  "s0037": {
    "chinese": "後十三世，至帝孔甲，淫德好神，神黷，二龍去之。",
    "literal": "",
    "idiomatic": ""
  },
  "s0038": {
    "chinese": "其後十三世，湯伐桀，欲讓夏社，不可，作夏社。",
    "literal": "",
    "idiomatic": ""
  },
  "s0039": {
    "chinese": "乃讓烈山子柱，而以周棄代為稷祠。",
    "literal": "",
    "idiomatic": ""
  },
  "s0040": {
    "chinese": "後八世，帝太戊有桑穀生於廷，一暮大拱，懼。",
    "literal": "",
    "idiomatic": ""
  },
  "s0041": {
    "chinese": "伊陟曰：「祅不勝德。」",
    "literal": "",
    "idiomatic": ""
  },
  "s0042": {
    "chinese": "太戊修德，桑穀死。",
    "literal": "",
    "idiomatic": ""
  },
  "s0043": {
    "chinese": "伊陟贊巫咸。",
    "literal": "",
    "idiomatic": ""
  },
  "s0044": {
    "chinese": "後十三世，帝武丁得傅說為相，殷復興焉，稱高宗。",
    "literal": "",
    "idiomatic": ""
  },
  "s0045": {
    "chinese": "有雉登鼎耳而雊，武丁懼。",
    "literal": "",
    "idiomatic": ""
  },
  "s0046": {
    "chinese": "祖己曰：「修德。」",
    "literal": "",
    "idiomatic": ""
  },
  "s0047": {
    "chinese": "武丁從之，位以永寧。",
    "literal": "",
    "idiomatic": ""
  },
  "s0048": {
    "chinese": "後五世，帝乙嫚神而震死。",
    "literal": "",
    "idiomatic": ""
  },
  "s0049": {
    "chinese": "後三世，帝紂淫亂，武王伐之。",
    "literal": "",
    "idiomatic": ""
  },
  "s0050": {
    "chinese": "由是觀之，始未嘗不肅祇，後稍怠嫚也。",
    "literal": "",
    "idiomatic": ""
  }
}