{
  "s0001": {
    "chinese": "孝昭皇帝，武帝少子也。",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0002": {
    "chinese": "母曰趙婕妤，本以有奇異得幸，及生帝，亦奇異。",
    "literal": "[Literal translation needed for 18 characters]",
    "idiomatic": "[Idiomatic translation needed for 18 characters]"
  },
  "s0003": {
    "chinese": "語在外戚傳。",
    "literal": "[Literal translation needed for 5 characters]",
    "idiomatic": "[Idiomatic translation needed for 5 characters]"
  },
  "s0004": {
    "chinese": "武帝末，戾太子 敗，燕王旦、廣陵王胥行驕嫚，後元二年二月上疾病，遂立昭帝為太子，年八歲。",
    "literal": "[Literal translation needed for 36 characters]",
    "idiomatic": "[Idiomatic translation needed for 36 characters]"
  },
  "s0005": {
    "chinese": "以侍中奉車都尉霍光為大司馬大將軍，受遺詔輔少主。",
    "literal": "[Literal translation needed for 22 characters]",
    "idiomatic": "[Idiomatic translation needed for 22 characters]"
  },
  "s0006": {
    "chinese": "明日，武帝崩。",
    "literal": "[Literal translation needed for 5 characters]",
    "idiomatic": "[Idiomatic translation needed for 5 characters]"
  },
  "s0007": {
    "chinese": "戊辰，太子 即皇帝位，謁高廟。",
    "literal": "[Literal translation needed for 11 characters]",
    "idiomatic": "[Idiomatic translation needed for 11 characters]"
  },
  "s0008": {
    "chinese": "帝姊鄂邑公主益湯沐邑，為長公主，共養省中。",
    "literal": "[Literal translation needed for 18 characters]",
    "idiomatic": "[Idiomatic translation needed for 18 characters]"
  },
  "s0009": {
    "chinese": "大將軍光秉政，領尚書事，車騎將軍金日磾、左將軍上官桀副焉。",
    "literal": "[Literal translation needed for 25 characters]",
    "idiomatic": "[Idiomatic translation needed for 25 characters]"
  },
  "s0010": {
    "chinese": "夏六月，赦天下。",
    "literal": "[Literal translation needed for 6 characters]",
    "idiomatic": "[Idiomatic translation needed for 6 characters]"
  },
  "s0011": {
    "chinese": "秋七月，有星孛于東方。",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0012": {
    "chinese": "濟北王寬有罪，自殺。",
    "literal": "[Literal translation needed for 8 characters]",
    "idiomatic": "[Idiomatic translation needed for 8 characters]"
  },
  "s0013": {
    "chinese": "賜長公主及宗室昆弟各有差。",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  },
  "s0014": {
    "chinese": "追尊趙婕妤為皇太后，起雲陵。",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  },
  "s0015": {
    "chinese": "冬，匈奴入朔方，殺略吏民。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0016": {
    "chinese": "發軍屯西河，左將軍桀行北邊。",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  },
  "s0017": {
    "chinese": "始元元年春二月，黃鵠下建章宮太液池中。",
    "literal": "[Literal translation needed for 17 characters]",
    "idiomatic": "[Idiomatic translation needed for 17 characters]"
  },
  "s0018": {
    "chinese": "公卿上壽。",
    "literal": "[Literal translation needed for 4 characters]",
    "idiomatic": "[Idiomatic translation needed for 4 characters]"
  },
  "s0019": {
    "chinese": "賜諸侯王、列侯、宗室金錢各有差。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0020": {
    "chinese": "己亥，上耕于鉤盾弄田。",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0021": {
    "chinese": "益封燕王、廣陵王及鄂邑長公主各萬三千戶。",
    "literal": "[Literal translation needed for 18 characters]",
    "idiomatic": "[Idiomatic translation needed for 18 characters]"
  },
  "s0022": {
    "chinese": "夏，為太后起園廟雲陵。",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0023": {
    "chinese": "益州廉頭、姑繒、牂柯談指、同並二十四邑皆反。",
    "literal": "[Literal translation needed for 18 characters]",
    "idiomatic": "[Idiomatic translation needed for 18 characters]"
  },
  "s0024": {
    "chinese": "遣水衡都尉呂破胡募吏民及發犍為、蜀郡奔命擊益州，大破之。",
    "literal": "[Literal translation needed for 25 characters]",
    "idiomatic": "[Idiomatic translation needed for 25 characters]"
  },
  "s0025": {
    "chinese": "有司請河內屬冀州，河東屬并州。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0026": {
    "chinese": "秋七月，赦天下，賜民百戶牛酒。",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  },
  "s0027": {
    "chinese": "大雨，渭橋絕。",
    "literal": "[Literal translation needed for 5 characters]",
    "idiomatic": "[Idiomatic translation needed for 5 characters]"
  },
  "s0028": {
    "chinese": "八月，齊孝王孫劉澤謀反，欲殺青州刺史雋不疑，發覺，皆伏誅。",
    "literal": "[Literal translation needed for 24 characters]",
    "idiomatic": "[Idiomatic translation needed for 24 characters]"
  },
  "s0029": {
    "chinese": "遷不疑為京兆尹，賜錢百萬。",
    "literal": "[Literal translation needed for 11 characters]",
    "idiomatic": "[Idiomatic translation needed for 11 characters]"
  },
  "s0030": {
    "chinese": "九月丙子，車騎將軍日磾薨。",
    "literal": "[Literal translation needed for 11 characters]",
    "idiomatic": "[Idiomatic translation needed for 11 characters]"
  },
  "s0031": {
    "chinese": "閏月，遣故廷尉王平等五人持節行郡國，舉賢良，問民所疾苦、冤、失職者。",
    "literal": "[Literal translation needed for 28 characters]",
    "idiomatic": "[Idiomatic translation needed for 28 characters]"
  },
  "s0032": {
    "chinese": "冬，無冰。",
    "literal": "[Literal translation needed for 3 characters]",
    "idiomatic": "[Idiomatic translation needed for 3 characters]"
  },
  "s0033": {
    "chinese": "二年春正月，大將軍光、左將軍桀皆以前捕斬反虜重合侯馬通功封，光為博陸侯，桀為安陽侯。",
    "literal": "[Literal translation needed for 37 characters]",
    "idiomatic": "[Idiomatic translation needed for 37 characters]"
  },
  "s0034": {
    "chinese": "以宗室毋在位者，舉茂才劉辟彊、劉長樂皆為光祿大夫，辟彊守長樂衛尉。",
    "literal": "[Literal translation needed for 29 characters]",
    "idiomatic": "[Idiomatic translation needed for 29 characters]"
  },
  "s0035": {
    "chinese": "三月，遣使者振貸貧民毋種、食者。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0036": {
    "chinese": "秋八月，詔曰：「往年災害多，今年蠶麥傷，所振貸種、食勿收責，毋令民出今年田租。」",
    "literal": "[Literal translation needed for 31 characters]",
    "idiomatic": "[Idiomatic translation needed for 31 characters]"
  },
  "s0037": {
    "chinese": "冬，發習戰射士詣朔方，調故吏將屯田張掖郡。",
    "literal": "[Literal translation needed for 18 characters]",
    "idiomatic": "[Idiomatic translation needed for 18 characters]"
  },
  "s0038": {
    "chinese": "三年春二月，有星孛于西北。",
    "literal": "[Literal translation needed for 11 characters]",
    "idiomatic": "[Idiomatic translation needed for 11 characters]"
  },
  "s0039": {
    "chinese": "秋，募民徙雲陵，賜錢田宅。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0040": {
    "chinese": "冬十月，鳳皇集東海，遣使者祠其處。",
    "literal": "[Literal translation needed for 14 characters]",
    "idiomatic": "[Idiomatic translation needed for 14 characters]"
  },
  "s0041": {
    "chinese": "十一月壬辰朔，日有蝕之。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0042": {
    "chinese": "四年春三月甲寅，立皇后上官氏。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0043": {
    "chinese": "赦天下。",
    "literal": "[Literal translation needed for 3 characters]",
    "idiomatic": "[Idiomatic translation needed for 3 characters]"
  },
  "s0044": {
    "chinese": "辭訟在後二年前，皆勿聽治。",
    "literal": "[Literal translation needed for 11 characters]",
    "idiomatic": "[Idiomatic translation needed for 11 characters]"
  },
  "s0045": {
    "chinese": "夏六月，皇后見高廟。",
    "literal": "[Literal translation needed for 8 characters]",
    "idiomatic": "[Idiomatic translation needed for 8 characters]"
  },
  "s0046": {
    "chinese": "賜長公主、丞相、將軍、列侯、中二千石以下及郎吏宗室錢帛各有差。",
    "literal": "[Literal translation needed for 26 characters]",
    "idiomatic": "[Idiomatic translation needed for 26 characters]"
  },
  "s0047": {
    "chinese": "徙三輔富人雲陵，賜錢，戶十萬。",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  },
  "s0048": {
    "chinese": "秋七月，詔曰：「比歲不登，民匱於食，流庸未盡還，往時令民共出馬，其止勿出。",
    "literal": "[Literal translation needed for 29 characters]",
    "idiomatic": "[Idiomatic translation needed for 29 characters]"
  },
  "s0049": {
    "chinese": "諸給中都官者，且減之。」",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0050": {
    "chinese": "冬，遣大鴻臚田廣明擊益州。",
    "literal": "[Literal translation needed for 11 characters]",
    "idiomatic": "[Idiomatic translation needed for 11 characters]"
  }
}