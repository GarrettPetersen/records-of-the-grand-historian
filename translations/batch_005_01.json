{
  "s0001": {
    "chinese": "孝文皇帝，高祖中子也，母曰薄姬。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0002": {
    "chinese": "高祖十一年，誅陳豨，定代地，立為代王，都中都。",
    "literal": "[Literal translation needed for 18 characters]",
    "idiomatic": "[Idiomatic translation needed for 18 characters]"
  },
  "s0003": {
    "chinese": "十七年秋，高后崩，諸呂謀為亂，欲危劉氏。",
    "literal": "[Literal translation needed for 16 characters]",
    "idiomatic": "[Idiomatic translation needed for 16 characters]"
  },
  "s0004": {
    "chinese": "丞相陳平、太尉周勃、朱虛侯劉章等共誅之，謀立代王。",
    "literal": "[Literal translation needed for 21 characters]",
    "idiomatic": "[Idiomatic translation needed for 21 characters]"
  },
  "s0005": {
    "chinese": "語在高后紀、高五王傳。",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0006": {
    "chinese": "大臣遂使人迎代王。",
    "literal": "[Literal translation needed for 8 characters]",
    "idiomatic": "[Idiomatic translation needed for 8 characters]"
  },
  "s0007": {
    "chinese": "郎中令張武等議，皆曰：「漢大臣皆故高帝時將，習兵事，多謀詐，其屬意非止此 也，特畏高帝、呂太后威耳。",
    "literal": "[Literal translation needed for 40 characters]",
    "idiomatic": "[Idiomatic translation needed for 40 characters]"
  },
  "s0008": {
    "chinese": "今已誅諸呂，新喋血京師，以迎大王為名，實不可信。",
    "literal": "[Literal translation needed for 20 characters]",
    "idiomatic": "[Idiomatic translation needed for 20 characters]"
  },
  "s0009": {
    "chinese": "願稱疾無往，以觀其變。」",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0010": {
    "chinese": "中尉宋昌進曰：「群臣之議皆非也。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0011": {
    "chinese": "夫秦失其政，豪 傑並起，人人自以為得之者以萬數，然卒踐天子位者，劉氏也，天下絕望，一矣。",
    "literal": "[Literal translation needed for 36 characters]",
    "idiomatic": "[Idiomatic translation needed for 36 characters]"
  },
  "s0012": {
    "chinese": "高帝王子弟，地犬牙相制，所謂盤石之宗也，天下服其彊，二矣。",
    "literal": "[Literal translation needed for 24 characters]",
    "idiomatic": "[Idiomatic translation needed for 24 characters]"
  },
  "s0013": {
    "chinese": "漢興，除秦煩 苛，約法令，施德惠，人人自安，難動搖，三矣。",
    "literal": "[Literal translation needed for 21 characters]",
    "idiomatic": "[Idiomatic translation needed for 21 characters]"
  },
  "s0014": {
    "chinese": "夫以呂太后之嚴，立諸呂為三王，擅權專制，然而太尉以一節入北軍，一呼士皆袒左，為劉氏，畔諸呂，卒以滅 之。",
    "literal": "[Literal translation needed for 43 characters]",
    "idiomatic": "[Idiomatic translation needed for 43 characters]"
  },
  "s0015": {
    "chinese": "此乃天授，非人力也。",
    "literal": "[Literal translation needed for 8 characters]",
    "idiomatic": "[Idiomatic translation needed for 8 characters]"
  },
  "s0016": {
    "chinese": "今大臣雖欲為變，百姓弗為使，其黨寧能專一邪？",
    "literal": "[Literal translation needed for 19 characters]",
    "idiomatic": "[Idiomatic translation needed for 19 characters]"
  },
  "s0017": {
    "chinese": "內有朱虛、東牟之親，外畏吳、楚、淮南、琅邪、齊、代之彊。",
    "literal": "[Literal translation needed for 20 characters]",
    "idiomatic": "[Idiomatic translation needed for 20 characters]"
  },
  "s0018": {
    "chinese": "方今高帝子獨淮南王與 大王，大王又長，賢聖仁孝，聞於天下，故大臣因天下之心而欲迎立大王，大王勿疑也。」",
    "literal": "[Literal translation needed for 43 characters]",
    "idiomatic": "[Idiomatic translation needed for 43 characters]"
  },
  "s0019": {
    "chinese": "代王報太后，計猶豫未定。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0020": {
    "chinese": "卜之，兆得大橫。",
    "literal": "[Literal translation needed for 6 characters]",
    "idiomatic": "[Idiomatic translation needed for 6 characters]"
  },
  "s0021": {
    "chinese": "占曰：「大橫庚庚，余為天 王，夏啟以光。」",
    "literal": "[Literal translation needed for 14 characters]",
    "idiomatic": "[Idiomatic translation needed for 14 characters]"
  },
  "s0022": {
    "chinese": "代王曰：「寡人固已為王，又何王乎？」",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0023": {
    "chinese": "卜人曰：「所謂天王者，乃天子也。」",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  },
  "s0024": {
    "chinese": "於是代王乃遣太后弟薄昭見太尉勃，勃等具言所以迎立王者。",
    "literal": "[Literal translation needed for 25 characters]",
    "idiomatic": "[Idiomatic translation needed for 25 characters]"
  },
  "s0025": {
    "chinese": "昭還 報曰：「信矣，無可疑者。」",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0026": {
    "chinese": "代王笑謂宋昌曰：「果如公言。」",
    "literal": "[Literal translation needed for 11 characters]",
    "idiomatic": "[Idiomatic translation needed for 11 characters]"
  },
  "s0027": {
    "chinese": "乃令宋昌驂乘，張武等六人乘六乘傳詣長安。",
    "literal": "[Literal translation needed for 18 characters]",
    "idiomatic": "[Idiomatic translation needed for 18 characters]"
  },
  "s0028": {
    "chinese": "至高陵止，而使宋昌先之長安觀變。",
    "literal": "[Literal translation needed for 14 characters]",
    "idiomatic": "[Idiomatic translation needed for 14 characters]"
  },
  "s0029": {
    "chinese": "昌至渭橋，丞相已下皆迎。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0030": {
    "chinese": "昌還報，代王乃進至渭橋。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0031": {
    "chinese": "群臣拜謁稱臣，代王下拜。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0032": {
    "chinese": "太尉勃進曰：「願請間。」",
    "literal": "[Literal translation needed for 8 characters]",
    "idiomatic": "[Idiomatic translation needed for 8 characters]"
  },
  "s0033": {
    "chinese": "宋昌曰：「所言公，公言之；",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0034": {
    "chinese": "所言私，王者無私。」",
    "literal": "[Literal translation needed for 7 characters]",
    "idiomatic": "[Idiomatic translation needed for 7 characters]"
  },
  "s0035": {
    "chinese": "太尉勃乃跪上天子璽。",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0036": {
    "chinese": "代王謝曰：「至邸而議之。」",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0037": {
    "chinese": "十二月，立趙幽王子遂為趙王，徙琅邪王澤為燕王。",
    "literal": "[Literal translation needed for 20 characters]",
    "idiomatic": "[Idiomatic translation needed for 20 characters]"
  },
  "s0038": {
    "chinese": "呂氏所奪齊楚地皆歸之。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0039": {
    "chinese": "盡除收帑相坐律令。",
    "literal": "[Literal translation needed for 8 characters]",
    "idiomatic": "[Idiomatic translation needed for 8 characters]"
  },
  "s0040": {
    "chinese": "正月，有司請蚤建太子，所以尊宗廟也。",
    "literal": "[Literal translation needed for 15 characters]",
    "idiomatic": "[Idiomatic translation needed for 15 characters]"
  },
  "s0041": {
    "chinese": "詔曰：「朕既不德，上帝神明未歆饗也，天下人民未有轺志。",
    "literal": "[Literal translation needed for 22 characters]",
    "idiomatic": "[Idiomatic translation needed for 22 characters]"
  },
  "s0042": {
    "chinese": "今 縱不能博求天下賢聖有德之人而嬗天下焉，而曰豫建太子，是重吾不德也。",
    "literal": "[Literal translation needed for 31 characters]",
    "idiomatic": "[Idiomatic translation needed for 31 characters]"
  },
  "s0043": {
    "chinese": "謂天下何？",
    "literal": "[Literal translation needed for 4 characters]",
    "idiomatic": "[Idiomatic translation needed for 4 characters]"
  },
  "s0044": {
    "chinese": "其安之。」",
    "literal": "[Literal translation needed for 3 characters]",
    "idiomatic": "[Idiomatic translation needed for 3 characters]"
  },
  "s0045": {
    "chinese": "有司曰：「豫建太子，所以重宗廟社稷，不忘天下也。」",
    "literal": "[Literal translation needed for 19 characters]",
    "idiomatic": "[Idiomatic translation needed for 19 characters]"
  },
  "s0046": {
    "chinese": "上曰： 「楚王，季父也，春秋高，閱天下之義理多矣，明於國家之體。",
    "literal": "[Literal translation needed for 24 characters]",
    "idiomatic": "[Idiomatic translation needed for 24 characters]"
  },
  "s0047": {
    "chinese": "吳王於朕，兄也；",
    "literal": "[Literal translation needed for 6 characters]",
    "idiomatic": "[Idiomatic translation needed for 6 characters]"
  },
  "s0048": {
    "chinese": "淮南王，弟也：皆秉德以陪朕，豈為不豫哉！",
    "literal": "[Literal translation needed for 16 characters]",
    "idiomatic": "[Idiomatic translation needed for 16 characters]"
  },
  "s0049": {
    "chinese": "諸侯王宗室昆弟有功臣，多賢及有德 義者，若舉有德以陪朕之不能終，是社稷之靈，天下之福也。",
    "literal": "[Literal translation needed for 38 characters]",
    "idiomatic": "[Idiomatic translation needed for 38 characters]"
  },
  "s0050": {
    "chinese": "今不選舉焉，而曰必子，人其以朕為忘賢有德者而專於子，非所以憂天下也。",
    "literal": "[Literal translation needed for 30 characters]",
    "idiomatic": "[Idiomatic translation needed for 30 characters]"
  }
}