{
  "s0001": {
    "chinese": "孝宣皇帝，武帝曾孫，戾太子孫也。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0002": {
    "chinese": "太子納史良娣，生史皇孫。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0003": {
    "chinese": "皇孫納王夫人，生宣帝，號曰皇曾孫。",
    "literal": "[Literal translation needed for 14 characters]",
    "idiomatic": "[Idiomatic translation needed for 14 characters]"
  },
  "s0004": {
    "chinese": "生 數月，遭巫蠱事，太子、良娣、皇孫、王夫人皆遇害。",
    "literal": "[Literal translation needed for 19 characters]",
    "idiomatic": "[Idiomatic translation needed for 19 characters]"
  },
  "s0005": {
    "chinese": "語在太子傳。",
    "literal": "[Literal translation needed for 5 characters]",
    "idiomatic": "[Idiomatic translation needed for 5 characters]"
  },
  "s0006": {
    "chinese": "曾孫雖在襁褓，猶坐收繫郡邸獄。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0007": {
    "chinese": "而邴吉為廷尉監，治巫蠱於郡邸，憐曾孫之亡辜，使女徒復作 淮陽趙徵卿、渭城胡組更乳養，私給衣食，視遇甚有恩。",
    "literal": "[Literal translation needed for 45 characters]",
    "idiomatic": "[Idiomatic translation needed for 45 characters]"
  },
  "s0008": {
    "chinese": "巫蠱事連歲不決。",
    "literal": "[Literal translation needed for 7 characters]",
    "idiomatic": "[Idiomatic translation needed for 7 characters]"
  },
  "s0009": {
    "chinese": "至後元二年，武帝疾，往來長楊、五柞宮，望氣者言長安獄中有天子氣，上遣使者分條中都官獄繫者，輕重皆殺之。",
    "literal": "[Literal translation needed for 44 characters]",
    "idiomatic": "[Idiomatic translation needed for 44 characters]"
  },
  "s0010": {
    "chinese": "內謁者令郭穰夜至郡邸獄，吉拒閉，使者不得入，曾孫賴吉得全。",
    "literal": "[Literal translation needed for 25 characters]",
    "idiomatic": "[Idiomatic translation needed for 25 characters]"
  },
  "s0011": {
    "chinese": "因遭大赦，吉乃載曾孫送祖母史良娣家。",
    "literal": "[Literal translation needed for 16 characters]",
    "idiomatic": "[Idiomatic translation needed for 16 characters]"
  },
  "s0012": {
    "chinese": "語在吉及外戚傳。",
    "literal": "[Literal translation needed for 7 characters]",
    "idiomatic": "[Idiomatic translation needed for 7 characters]"
  },
  "s0013": {
    "chinese": "後有詔掖庭養視，上屬籍宗正。",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  },
  "s0014": {
    "chinese": "時掖庭令張賀嘗事戾太子，思顧舊恩，哀曾孫，奉養甚謹，以私錢供給教 書。",
    "literal": "[Literal translation needed for 29 characters]",
    "idiomatic": "[Idiomatic translation needed for 29 characters]"
  },
  "s0015": {
    "chinese": "既壯，為取暴室嗇夫許廣漢女，曾孫因依倚廣漢兄弟及祖母家史氏。",
    "literal": "[Literal translation needed for 27 characters]",
    "idiomatic": "[Idiomatic translation needed for 27 characters]"
  },
  "s0016": {
    "chinese": "受詩於東海澓中翁，高材好學，然亦喜游俠，鬥雞走馬，具知閭里奸邪，吏治得失。",
    "literal": "[Literal translation needed for 31 characters]",
    "idiomatic": "[Idiomatic translation needed for 31 characters]"
  },
  "s0017": {
    "chinese": "數上下 諸陵，周遍三輔，常困於蓮勺鹵中。",
    "literal": "[Literal translation needed for 16 characters]",
    "idiomatic": "[Idiomatic translation needed for 16 characters]"
  },
  "s0018": {
    "chinese": "尤樂杜、鄠之間，率常在下杜。",
    "literal": "[Literal translation needed for 11 characters]",
    "idiomatic": "[Idiomatic translation needed for 11 characters]"
  },
  "s0019": {
    "chinese": "時會朝請，舍長安尚冠里，身足下有毛，臥居數有光燿。",
    "literal": "[Literal translation needed for 21 characters]",
    "idiomatic": "[Idiomatic translation needed for 21 characters]"
  },
  "s0020": {
    "chinese": "每買餅，所從買家輒大讎，亦以自是 怪。",
    "literal": "[Literal translation needed for 15 characters]",
    "idiomatic": "[Idiomatic translation needed for 15 characters]"
  },
  "s0021": {
    "chinese": "元平元年四月，昭帝崩，毋嗣。",
    "literal": "[Literal translation needed for 11 characters]",
    "idiomatic": "[Idiomatic translation needed for 11 characters]"
  },
  "s0022": {
    "chinese": "大將軍霍光請皇后徵昌邑王。",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  },
  "s0023": {
    "chinese": "六月丙寅，王受皇帝璽綬，尊皇后曰皇太后。",
    "literal": "[Literal translation needed for 17 characters]",
    "idiomatic": "[Idiomatic translation needed for 17 characters]"
  },
  "s0024": {
    "chinese": "癸巳，光奏王賀淫亂，請廢。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0025": {
    "chinese": "語在賀及光傳。",
    "literal": "[Literal translation needed for 6 characters]",
    "idiomatic": "[Idiomatic translation needed for 6 characters]"
  },
  "s0026": {
    "chinese": "秋七月，光奏議曰：「禮，人道親親故尊祖，尊祖故敬宗。",
    "literal": "[Literal translation needed for 20 characters]",
    "idiomatic": "[Idiomatic translation needed for 20 characters]"
  },
  "s0027": {
    "chinese": "大宗毋嗣，擇支子孫賢者為嗣。",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  },
  "s0028": {
    "chinese": "孝武皇帝曾孫 病已，有詔掖庭養視，至今年十八，師受詩、論語、孝經，操行節儉，慈仁愛人，可以嗣孝昭皇帝後，奉承祖宗，子萬姓。」",
    "literal": "[Literal translation needed for 49 characters]",
    "idiomatic": "[Idiomatic translation needed for 49 characters]"
  },
  "s0029": {
    "chinese": "奏可。",
    "literal": "[Literal translation needed for 2 characters]",
    "idiomatic": "[Idiomatic translation needed for 2 characters]"
  },
  "s0030": {
    "chinese": "遣宗正德至曾孫尚冠里舍，洗 沐，賜御府衣。",
    "literal": "[Literal translation needed for 17 characters]",
    "idiomatic": "[Idiomatic translation needed for 17 characters]"
  },
  "s0031": {
    "chinese": "太僕以軨獵車奉迎曾孫，就齊宗正府。",
    "literal": "[Literal translation needed for 15 characters]",
    "idiomatic": "[Idiomatic translation needed for 15 characters]"
  },
  "s0032": {
    "chinese": "庚申，入未央宮，見皇太后，封為陽武侯。",
    "literal": "[Literal translation needed for 15 characters]",
    "idiomatic": "[Idiomatic translation needed for 15 characters]"
  },
  "s0033": {
    "chinese": "已而群臣奉上璽綬，即皇帝位，謁高廟。",
    "literal": "[Literal translation needed for 15 characters]",
    "idiomatic": "[Idiomatic translation needed for 15 characters]"
  },
  "s0034": {
    "chinese": "八月己巳，丞相敞薨。",
    "literal": "[Literal translation needed for 8 characters]",
    "idiomatic": "[Idiomatic translation needed for 8 characters]"
  },
  "s0035": {
    "chinese": "九月，大赦天下。",
    "literal": "[Literal translation needed for 6 characters]",
    "idiomatic": "[Idiomatic translation needed for 6 characters]"
  },
  "s0036": {
    "chinese": "十一月壬子，立皇后許氏。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0037": {
    "chinese": "賜諸侯王以下金錢，至吏民鰥寡孤獨各有差。",
    "literal": "[Literal translation needed for 18 characters]",
    "idiomatic": "[Idiomatic translation needed for 18 characters]"
  },
  "s0038": {
    "chinese": "皇太后歸長樂宮。",
    "literal": "[Literal translation needed for 7 characters]",
    "idiomatic": "[Idiomatic translation needed for 7 characters]"
  },
  "s0039": {
    "chinese": "初置屯衛。",
    "literal": "[Literal translation needed for 4 characters]",
    "idiomatic": "[Idiomatic translation needed for 4 characters]"
  },
  "s0040": {
    "chinese": "本始元年春正月，募郡國吏民訾百萬以上徙平陵。",
    "literal": "[Literal translation needed for 20 characters]",
    "idiomatic": "[Idiomatic translation needed for 20 characters]"
  },
  "s0041": {
    "chinese": "遣使者持節詔郡國二千石謹牧養民而風德化。",
    "literal": "[Literal translation needed for 19 characters]",
    "idiomatic": "[Idiomatic translation needed for 19 characters]"
  },
  "s0042": {
    "chinese": "大將軍光稽首歸政，上謙讓委任焉。",
    "literal": "[Literal translation needed for 14 characters]",
    "idiomatic": "[Idiomatic translation needed for 14 characters]"
  },
  "s0043": {
    "chinese": "論定策功，益封大將軍光萬七千戶，車騎將軍光祿勳富平侯安世萬 戶。",
    "literal": "[Literal translation needed for 28 characters]",
    "idiomatic": "[Idiomatic translation needed for 28 characters]"
  },
  "s0044": {
    "chinese": "詔曰：「故丞相安平侯敞等居位守職，與大將軍光、車騎將軍安世建議定策，以安宗廟，功賞未加而薨。",
    "literal": "[Literal translation needed for 39 characters]",
    "idiomatic": "[Idiomatic translation needed for 39 characters]"
  },
  "s0045": {
    "chinese": "其益封敞嗣子忠及丞相陽平侯義、度遼將軍平陵侯明 友、前將軍龍雒侯增、太僕建平侯延年、太常蒲侯昌、諫大夫宜春侯譚、當塗侯平、杜侯屠耆堂、長信少府關內侯勝邑戶各有差。",
    "literal": "[Literal translation needed for 71 characters]",
    "idiomatic": "[Idiomatic translation needed for 71 characters]"
  },
  "s0046": {
    "chinese": "封御史大夫廣明為昌水侯，後將軍 充國為營平侯，大司農延年為陽城侯，少府樂成為爰氏侯，光祿大夫遷為平丘侯。",
    "literal": "[Literal translation needed for 46 characters]",
    "idiomatic": "[Idiomatic translation needed for 46 characters]"
  },
  "s0047": {
    "chinese": "賜右扶風德、典屬國武、廷尉光、宗正德、大鴻臚賢、詹事畸、光祿大夫吉、京輔 都尉廣漢爵皆關內侯。",
    "literal": "[Literal translation needed for 38 characters]",
    "idiomatic": "[Idiomatic translation needed for 38 characters]"
  },
  "s0048": {
    "chinese": "德、武食邑。」",
    "literal": "[Literal translation needed for 4 characters]",
    "idiomatic": "[Idiomatic translation needed for 4 characters]"
  },
  "s0049": {
    "chinese": "夏四月庚午，地震。",
    "literal": "[Literal translation needed for 7 characters]",
    "idiomatic": "[Idiomatic translation needed for 7 characters]"
  },
  "s0050": {
    "chinese": "詔內郡國舉文學高第各一人。",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  }
}