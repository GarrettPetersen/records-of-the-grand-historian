{
  "s0001": {
    "chinese": "乙未，有司言：「乘輿車、牛馬、禽獸皆非禮，不宜以葬。」",
    "literal": "[Literal translation needed for 19 characters]",
    "idiomatic": "[Idiomatic translation needed for 19 characters]"
  },
  "s0002": {
    "chinese": "奏可。",
    "literal": "[Literal translation needed for 2 characters]",
    "idiomatic": "[Idiomatic translation needed for 2 characters]"
  },
  "s0003": {
    "chinese": "七月，大赦天下。",
    "literal": "[Literal translation needed for 6 characters]",
    "idiomatic": "[Idiomatic translation needed for 6 characters]"
  },
  "s0004": {
    "chinese": "建始元年春正月乙丑，皇曾祖悼考廟災。",
    "literal": "[Literal translation needed for 16 characters]",
    "idiomatic": "[Idiomatic translation needed for 16 characters]"
  },
  "s0005": {
    "chinese": "立故河間王弟上郡庫令良為王。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0006": {
    "chinese": "有星孛于營室。",
    "literal": "[Literal translation needed for 6 characters]",
    "idiomatic": "[Idiomatic translation needed for 6 characters]"
  },
  "s0007": {
    "chinese": "罷上林詔獄。",
    "literal": "[Literal translation needed for 5 characters]",
    "idiomatic": "[Idiomatic translation needed for 5 characters]"
  },
  "s0008": {
    "chinese": "二月，右將軍長史姚尹等使匈奴還，去塞百餘里，暴風火發，燒殺尹等七人。",
    "literal": "[Literal translation needed for 29 characters]",
    "idiomatic": "[Idiomatic translation needed for 29 characters]"
  },
  "s0009": {
    "chinese": "賜諸侯王、丞相、將軍、列侯、王太后、公主、王主、吏二千石黃金，宗室諸官吏千石以下至二百石及宗室子有屬籍者、三老、孝弟力田、鰥寡孤獨錢帛，各有差，吏民五十戶牛酒。",
    "literal": "[Literal translation needed for 66 characters]",
    "idiomatic": "[Idiomatic translation needed for 66 characters]"
  },
  "s0010": {
    "chinese": "詔曰：「乃者火災降於祖廟，有星孛于東方，始正而虧，咎孰大焉！",
    "literal": "[Literal translation needed for 24 characters]",
    "idiomatic": "[Idiomatic translation needed for 24 characters]"
  },
  "s0011": {
    "chinese": "《書》云：『惟先假王正厥事。』",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0012": {
    "chinese": "群公孜孜，帥先百寮，輔朕不逮。",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  },
  "s0013": {
    "chinese": "崇寬大，長和睦，凡事恕己，毋行苛刻。",
    "literal": "[Literal translation needed for 14 characters]",
    "idiomatic": "[Idiomatic translation needed for 14 characters]"
  },
  "s0014": {
    "chinese": "其大赦天下，使得自新。」",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0015": {
    "chinese": "封舅諸吏光祿大夫關內侯王崇為安成侯。",
    "literal": "[Literal translation needed for 17 characters]",
    "idiomatic": "[Idiomatic translation needed for 17 characters]"
  },
  "s0016": {
    "chinese": "賜舅王譚、商、立、根、逢時爵關內侯。",
    "literal": "[Literal translation needed for 13 characters]",
    "idiomatic": "[Idiomatic translation needed for 13 characters]"
  },
  "s0017": {
    "chinese": "夏四月，黃霧四塞，博問公卿大夫，無有所諱。",
    "literal": "[Literal translation needed for 17 characters]",
    "idiomatic": "[Idiomatic translation needed for 17 characters]"
  },
  "s0018": {
    "chinese": "六月，有青蠅無萬數集未央宮殿中朝者坐。",
    "literal": "[Literal translation needed for 17 characters]",
    "idiomatic": "[Idiomatic translation needed for 17 characters]"
  },
  "s0019": {
    "chinese": "秋，罷上林宮館希御幸者二十五所。",
    "literal": "[Literal translation needed for 14 characters]",
    "idiomatic": "[Idiomatic translation needed for 14 characters]"
  },
  "s0020": {
    "chinese": "八月，有兩月相承，晨見東方。",
    "literal": "[Literal translation needed for 11 characters]",
    "idiomatic": "[Idiomatic translation needed for 11 characters]"
  },
  "s0021": {
    "chinese": "九月戊子，流星光燭地，長四五丈，委曲蛇形，貫紫宮。",
    "literal": "[Literal translation needed for 20 characters]",
    "idiomatic": "[Idiomatic translation needed for 20 characters]"
  },
  "s0022": {
    "chinese": "十二月，作長安南北郊，罷甘泉、汾陰祠。",
    "literal": "[Literal translation needed for 15 characters]",
    "idiomatic": "[Idiomatic translation needed for 15 characters]"
  },
  "s0023": {
    "chinese": "是日大風，拔甘泉畤中大木十韋以上。",
    "literal": "[Literal translation needed for 15 characters]",
    "idiomatic": "[Idiomatic translation needed for 15 characters]"
  },
  "s0024": {
    "chinese": "郡國被災什四以上，毋收田租。",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  },
  "s0025": {
    "chinese": "二年春正月，罷雍五畤。",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0026": {
    "chinese": "辛巳，上始郊祀長安南郊。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0027": {
    "chinese": "詔曰：「乃者徙泰畤、后土于南郊、北郊，朕親飭躬，郊祀上帝。",
    "literal": "[Literal translation needed for 22 characters]",
    "idiomatic": "[Idiomatic translation needed for 22 characters]"
  },
  "s0028": {
    "chinese": "皇天報應，神光並見。",
    "literal": "[Literal translation needed for 8 characters]",
    "idiomatic": "[Idiomatic translation needed for 8 characters]"
  },
  "s0029": {
    "chinese": "三輔長無共張繇役之勞，赦奉郊縣長安、長陵及中都官耐罪徒。",
    "literal": "[Literal translation needed for 25 characters]",
    "idiomatic": "[Idiomatic translation needed for 25 characters]"
  },
  "s0030": {
    "chinese": "減天下賦錢，算四十。」",
    "literal": "[Literal translation needed for 8 characters]",
    "idiomatic": "[Idiomatic translation needed for 8 characters]"
  },
  "s0031": {
    "chinese": "閏月，以渭城延陵亭部為初陵。",
    "literal": "[Literal translation needed for 12 characters]",
    "idiomatic": "[Idiomatic translation needed for 12 characters]"
  },
  "s0032": {
    "chinese": "二月，詔三輔內郡舉賢良方正各一人。",
    "literal": "[Literal translation needed for 15 characters]",
    "idiomatic": "[Idiomatic translation needed for 15 characters]"
  },
  "s0033": {
    "chinese": "三月，北宮井水溢出。",
    "literal": "[Literal translation needed for 8 characters]",
    "idiomatic": "[Idiomatic translation needed for 8 characters]"
  },
  "s0034": {
    "chinese": "辛丑，上始祠后土于北郊。",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  },
  "s0035": {
    "chinese": "丙午，立皇后許氏。",
    "literal": "[Literal translation needed for 7 characters]",
    "idiomatic": "[Idiomatic translation needed for 7 characters]"
  },
  "s0036": {
    "chinese": "罷六廄、技巧官。",
    "literal": "[Literal translation needed for 6 characters]",
    "idiomatic": "[Idiomatic translation needed for 6 characters]"
  },
  "s0037": {
    "chinese": "夏，大旱。",
    "literal": "[Literal translation needed for 3 characters]",
    "idiomatic": "[Idiomatic translation needed for 3 characters]"
  },
  "s0038": {
    "chinese": "東平王宇有罪，削樊、亢父縣。",
    "literal": "[Literal translation needed for 11 characters]",
    "idiomatic": "[Idiomatic translation needed for 11 characters]"
  },
  "s0039": {
    "chinese": "秋，罷太子博望苑，以賜宗室朝請者。",
    "literal": "[Literal translation needed for 14 characters]",
    "idiomatic": "[Idiomatic translation needed for 14 characters]"
  },
  "s0040": {
    "chinese": "減乘輿廄馬。",
    "literal": "[Literal translation needed for 5 characters]",
    "idiomatic": "[Idiomatic translation needed for 5 characters]"
  },
  "s0041": {
    "chinese": "三年春三月，赦天下徒。",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0042": {
    "chinese": "賜孝弟力田爵二級。",
    "literal": "[Literal translation needed for 8 characters]",
    "idiomatic": "[Idiomatic translation needed for 8 characters]"
  },
  "s0043": {
    "chinese": "諸逋租賦所振貸勿收。",
    "literal": "[Literal translation needed for 9 characters]",
    "idiomatic": "[Idiomatic translation needed for 9 characters]"
  },
  "s0044": {
    "chinese": "秋，關內大水。",
    "literal": "[Literal translation needed for 5 characters]",
    "idiomatic": "[Idiomatic translation needed for 5 characters]"
  },
  "s0045": {
    "chinese": "七月，虒上小女陳持弓聞大水至，走入橫城門，闌入尚方掖門，至未央宮鉤盾中。",
    "literal": "[Literal translation needed for 31 characters]",
    "idiomatic": "[Idiomatic translation needed for 31 characters]"
  },
  "s0046": {
    "chinese": "吏民驚上城。",
    "literal": "[Literal translation needed for 5 characters]",
    "idiomatic": "[Idiomatic translation needed for 5 characters]"
  },
  "s0047": {
    "chinese": "九月，詔曰：「乃者郡國被水災，流殺人民，多至千數。",
    "literal": "[Literal translation needed for 19 characters]",
    "idiomatic": "[Idiomatic translation needed for 19 characters]"
  },
  "s0048": {
    "chinese": "京師無故訛言大水至，吏民驚恐，奔走乘城。",
    "literal": "[Literal translation needed for 17 characters]",
    "idiomatic": "[Idiomatic translation needed for 17 characters]"
  },
  "s0049": {
    "chinese": "殆苛暴深刻之吏未息，元元冤失職者眾。",
    "literal": "[Literal translation needed for 16 characters]",
    "idiomatic": "[Idiomatic translation needed for 16 characters]"
  },
  "s0050": {
    "chinese": "遣諫大夫林等循行天下。」",
    "literal": "[Literal translation needed for 10 characters]",
    "idiomatic": "[Idiomatic translation needed for 10 characters]"
  }
}