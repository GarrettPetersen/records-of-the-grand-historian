    "title": {
      "zh": "《司馬穰苴列傳》 Biography of Sima Rangju",
      "en": null,
      "raw": "《司馬穰苴列傳》 Biography of Sima Rangju"
    },
    "sentenceCount": 51,
    "translatedCount": 0,
    "glossarySize": 14406,
    "scrapedAt": "2025-12-15T05:58:46.403Z",
